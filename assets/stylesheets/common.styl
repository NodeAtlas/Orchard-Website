@font-face {
    font-family: 'Regular';
    src: url('../media/fonts/regular-light.eot?#iefix') format('embedded-opentype'),
         url('../media/fonts/regular-light.otf')  format('opentype'),
         url('../media/fonts/regular-light.woff') format('woff'), 
         url('../media/fonts/regular-light.ttf')  format('truetype'),
         url('../media/fonts/regular-light.svg#regular-light') format('svg');
    font-weight: lighter;
    font-style: normal;
}

@font-face {
    font-family: 'Regular';
    src: url('../media/fonts/regular-bold.eot?#iefix') format('embedded-opentype'),
         url('../media/fonts/regular-bold.otf')  format('opentype'),
         url('../media/fonts/regular-bold.woff') format('woff'),
         url('../media/fonts/regular-bold.ttf')  format('truetype'), 
         url('../media/fonts/regular-bold.svg#regular-bold') format('svg');
    font-weight: bold;
    font-style: normal;
}

html,
body
    font-size 62.5%
    
body
    margin 0
    padding 0
    font-size 1.8rem
    font-weight lighter
    color #4f4f4f
    font-family Regular, Arial, sans-serif
    width 100%
    height 100%
    letter-spacing .04rem

a
    color #4f4f4f
    text-decoration none
a:hover
    text-decoration underline
    
.layout
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    @media (min-width 768px)
        position absolute
        top 0
        left 0 
        height 100%
        width 100%

    &::before
        content ""
        display block
        position absolute
        left 0
        width .8rem
        height 100%
        background-color #080
        background rgba(254,225,64,1);
        background -moz-linear-gradient(top, rgba(254,225,64,1) 0%, rgba(255,63,117,1) 100%)
        background -webkit-gradient(left top, left bottom, color-stop(0%, rgba(254,225,64,1)), color-stop(100%, rgba(255,63,117,1)))
        background -webkit-linear-gradient(top, rgba(254,225,64,1) 0%, rgba(255,63,117,1) 100%)
        background -o-linear-gradient(top, rgba(254,225,64,1) 0%, rgba(255,63,117,1) 100%)
        background -ms-linear-gradient(top, rgba(254,225,64,1) 0%, rgba(255,63,117,1) 100%)
        background linear-gradient(to bottom, rgba(254,225,64,1) 0%, rgba(255,63,117,1) 100%)

.error
.home
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    @media (min-width 768px)
        position absolute
        top 0
        left 0
        width 100%
        height 100%
    
    &--navigation
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        position absolute
        left 3.2rem
        top 2rem
        font-size 1.8rem 
        
        @media (min-width 768px)
            font-size 1.2rem
        
        .is-selected
            display none
            @media (min-width 768px)
                display inline 
                a
                    font-weight bold

        ul
            margin 0
            padding 0
            list-style-type none 

        li
            @media (min-width 768px)
                &:nth-child(1)::after
                    content " -"
            display inline-block
 
    &--logo
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        padding-top 20px 
        display none

        img
            max-width 180px
            display block
            margin 0 auto
            padding 0 3.0rem
            
        @media (min-width 768px)
            padding-top 0 
            position absolute
            top 47%
            left 28%
            width 25%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            -o-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
            display block

            img
                padding 0
                max-width none

    &--content
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        padding 7rem 0rem 2rem

        img
            max-width 210px
        
        h1
        p
            padding 0 3.0rem

        .arrow 
            max-width 3.2rem
            vertical-align middle
            margin 0 0.8rem
        
        @media (min-width 768px)
            position absolute
            top 47%
            left 72%
            width 32%
            -webkit-transform translate(-50%, -50%)
            -moz-transform translate(-50%, -50%)
            -ms-transform translate(-50%, -50%)
            -o-transform translate(-50%, -50%)
            transform translate(-50%, -50%)
            
            img
                max-width none
            
            p
                padding 0  

            h1
                padding 0
                width 70%
        
    &--infos
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box
        font-size 1.2rem
        
        padding 0 3.0rem
        
        @media (min-width 768px)
            padding 0
            position absolute
            left 3.2rem
            bottom 2rem
            
        &--identity       
        &--contacts
        &--networks
            margin 0
            padding 0
            list-style-type none 
            float left
            margin-top 2.4em 
            margin-right 2.4rem

        &--contacts
            margin-right 1rem
            @media (min-width 768px)
                margin-right 2.4rem
            
        &--networks
            clear left
            margin-bottom 2rem
            @media (min-width 768px)
                clear none
                margin-bottom 0 


.fade-in-out-enter,
.fade-in-out-leave-to
    @media (min-width 768px)
        opacity 0
        transform rotateX(180deg)

.fade-in-out-leave-active,
.fade-in-out-enter-active
    @media (min-width 768px)
        transition opacity 2s, transform 2s

.fade-in-out-enter-to
.fade-in-out-leave
    @media (min-width 768px)
        opacity: 1
        transform: rotateX(0)
